{
  "name": "stylelint-config-shopify",
  "version": "7.4.0",
  "description": "Shopify's stylelint rules and config",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/shopify/stylelint-config-shopify"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check": "yarn lint && yarn test",
    "test": "jest ./rules/*.test.js ./plugins/**/*.test.js"
  },
  "engines": {
    "node": ">=10.10.0"
  },
  "keywords": [
    "stylelint",
    "stylelint-config",
    "config",
    "shopify",
    "css"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shopify/stylelint-config-shopify/issues"
  },
  "homepage": "https://github.com/shopify/stylelint-config-shopify",
  "eslintConfig": {
    "extends": [
      "plugin:shopify/esnext",
      "plugin:shopify/node",
      "plugin:shopify/jest"
    ],
    "globals": {
      "testRule": "readonly"
    }
  },
  "dependencies": {
    "merge": "1.2.x",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-order": "2.2.1",
    "stylelint-prettier": "1.1.2",
    "stylelint-scss": "3.13.0"
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-plugin-shopify": "^24.0.0",
    "jest": "^25.1.0",
    "stylelint": "9.5.0"
  },
  "peerDependencies": {
    "stylelint": ">=9.4.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "setupFiles": [
      "./jest-setup.js"
    ]
  }
}
